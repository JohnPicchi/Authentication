@model Authentication.PresentationModels.Admin.ViewModels.AdminViewModel


<div class="row">
  <div class="col-md-7">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-primary"> <i class="fa fa-user-plus"></i> Add User </h3>
      </div>
      <div class="card-block">
        @Html.Partial("_AddUser", Model.AddUser)
      </div>
    </div>
  </div><!--/col-->

  <div class="col-md-5">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-primary"> <i class="fa fa-id-card"></i> Add Role </h3>
      </div>
      <div class="card-block">
        @Html.Partial("_AddRole", Model.AddRole)
      </div>
    </div>
  </div><!--/col-->
</div><!--/row-->

<hr/>

<div class="row">
  <div class="col-md-12">
    <ul class="list-inline">
      <li class="list-inline-item">
        <form class="form-inline">
          <input type="text" class="form-control form-control-sm" placeholder="User Search"/>
          <div class="input-group-btn">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-primary btn-sm">
                <span class="fa fa-search" aria-hidden="true"></span>
              </button>
            </div>
          </div>
        </form>
      </li>
    </ul>
  </div><!--/col-->
</div><!--/row-->
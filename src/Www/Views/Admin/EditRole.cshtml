@using Authentication.Controllers
@using Authentication.PresentationModels.Admin.EditModels
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.Admin.ViewModels.EditRoleViewModel

<div class="row mb-5">
  <div class="col-md-6">

    <div class="row">
      <div class="col-sm-12">
        <h3 class="card-title text-primary">
          <i class="fa fa-info-circle"></i> Role Information
        </h3>
      </div><!--/col-->
    </div><!--/row-->

    <div class="row">
      <div class="col-sm-12">
        <form asp-controller="@(Helper.NameOfController<AdminController>())" asp-action="@(nameof(AdminController.EditRole))" method="post">
          <input asp-for="Role.Id" name="Id"/>

          <div class="row">
            <div class="col-sm-12">
              <strong>
                <label asp-for="Role.Name" class="form-control-label text-muted"></label>
              </strong>
            </div><!--/col-->
          </div><!--/row-->


          <div class="row mb-3">
            <div class="btn-group btn-group-sm col-sm-12">
              <input asp-for="Role.Name" class="form-control form-control-sm" name="Name"/>
              <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-edit"></i>
              </button>
              <span asp-validation-for="Role.Name" class="text-danger"></span>
            </div><!--/col-->
          </div><!--/row-->
        </form>
      </div><!--/col-->
    </div><!--/row-->

    <div class="row">
      <div class="col-sm-12">
        <dl class="row">
          <dt class="col-sm-12">
            <label asp-for="Role.Id" class="form-control-label text-muted"></label>
          </dt>
          <dd class="col-sm-12">@Model.Role.Id</dd>

          <dt class="col-sm-12">
            <label asp-for="DateCreated" class="form-control-label text-muted"></label>
          </dt>
          <dd class="col-sm-12">@Model.DateCreated</dd>

          <dt class="col-sm-12">
            <label asp-for="DateUpdated" class="form-control-label text-muted"></label>
          </dt>
          <dd class="col-sm-12">@Model.DateUpdated</dd>
        </dl>
      </div><!--/col-->
    </div><!--/row-->

  </div><!--/col-->
</div> <!--/row-->

<div class="row mb-5">
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12">
        <h3 class="text-primary">
          <i class="fa fa-plus"></i> Add Role Claim
        </h3>
      </div><!--/col-->
    </div><!--/row-->

    <form asp-controller="@(Helper.NameOfController<AdminController>())" asp-action="@(nameof(AdminController.AddRoleClaim))" method="post">
      <input asp-for="RoleClaim.RoleId" name="@(nameof(AddRoleClaimEditModel.RoleId))"/>
      <div class="row">
        <div class="col-sm-6">
          <strong>
            <label asp-for="RoleClaim.Type" class="form-control-label text-muted"></label>
          </strong>
        </div><!--/col-->

        <div class="col-sm-6">
          <strong>
            <label asp-for="RoleClaim.Value" class="form-control-label text-muted"></label>
          </strong>
        </div><!--/col-->
      </div><!--/row-->

      <div class="row form-group">
        <div class="col-sm-6">
          <input asp-for="RoleClaim.Type" name="@(nameof(AddRoleClaimEditModel.Type))" class="form-control form-control-sm"/>
          <span asp-validation-for="RoleClaim.Type" class="text-danger"></span>
        </div><!--/col-->

        <div class="col-sm-6">
          <input asp-for="RoleClaim.Value" name="@(nameof(AddRoleClaimEditModel.Value))"class="form-control form-control-sm"/>
          <span asp-validation-for="RoleClaim.Value" class="text-danger"></span>
        </div><!--/col-->
      </div><!--/row-->


      <div class="form-group row">
        <div class="col-md-1">
          <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Role Claim</button>
        </div>
      </div>
    </form>
  </div><!--/col-->
</div><!--/row-->

<div class="row mb-5">
  <div class="col-sm-12">
    
    <div class ="row">
      <div class="col-sm-12">
        <h3 class="card-title text-primary">
          <i class="fa fa-edit"></i> Role Claims
        </h3>
      </div><!--/col-->
    </div><!--/row-->
    
    <div class ="row">
      <div class="col-sm-6">
        @foreach (var roleClaim in Model.RoleClaims)
        {
          @roleClaim.ClaimType
          @roleClaim.ClaimValue
          <br/>
        }
      </div><!--/col-->
    </div><!--/row-->
    

  </div>
</div>

<div class="row">
  <div class="offset-11">
    <button type="button" class="btn btn-primary btn-group-lg">Done</button>
  </div>
</div>
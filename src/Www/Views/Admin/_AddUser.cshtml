@using Authentication.Controllers
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.Admin.EditModels.AddUserEditModel


<form asp-controller="@(Helper.NameOfController<AdminController>())" asp-action="@(nameof(AdminController.AddUser))" method="post">
  <div class="row">
    <div class="col-md-12">
      <strong>
        <label asp-for="Email" class="form-control-label text-muted"></label>
      </strong>
      <div class="form-group row">
        <div class="col-md-6">
          <input asp-for="Email" class="form-control form-control-sm"/>
          <span asp-validation-for="Email" class="text-danger"></span>
        </div><!--/col-->
      </div>
    </div><!--/col-->
  </div><!--/row-->

  <div class="row">
    <div class="col-md-6 d-inline-block">
      <strong>
        <label asp-for="Password" class="form-control-label text-muted"></label>
      </strong>
    </div><!--/col-->

    <div class="col-md-6 d-inline-block">
      <strong>
        <label asp-for="ConfirmPassword" class="form-control-label text-muted"></label>
      </strong>
    </div><!--/col-->
  </div><!--/row-->

  <div class="row">
    <div class="col-md-12">
      <div class="form-group row">
        <div class="col-md-6">
          <input asp-for="Password" class="form-control form-control-sm"/>
          <span asp-validation-for="Password" class="text-danger"></span>
        </div><!--/col-->

        <div class="col-md-6">
          <input asp-for="ConfirmPassword" class="form-control form-control-sm"/>
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div><!--/col-->
      </div>
    </div><!--/col-->
  </div><!--/row-->


  <div class="form-group row">
    <div class="col-md-3">
      <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-user-plus"></i> Add User </button>
    </div>
  </div>
</form>
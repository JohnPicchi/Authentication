@using Authentication.Controllers
@using Authentication.PresentationModels.Account.ViewModels
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.Account.EditModels.ForgotPasswordEditModel

<form asp-controller=@(Helper.NameOfController<AccountController>()) asp-action=@(nameof(AccountController.ForgotPassword)) method="post" class="form-horizontal">
  
  <div class="page-header">
    <h1>Forgot Password?</h1>
  </div>

  <div class="form-group">
    <label asp-for="Email" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email" />
      <span asp-validation-for="Email" class ="text-danger"></span>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>

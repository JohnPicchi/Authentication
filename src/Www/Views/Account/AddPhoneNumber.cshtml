@using Authentication.Controllers
@using Authentication.PresentationModels.Account.ViewModels
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.Account.ViewModels.AddPhoneNumberViewModel


<form asp-controller=@(Helper.NameOfController<AccountController>()) asp-action=@(nameof(AccountController.AddPhoneNumber)) method="post" class="form-horizontal">

  <div class="form-group">
    <label asp-for="PhoneNumber" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (999) 999 9999" />
      <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Verify Phone Number</button>
    </div>
  </div>

</form>
@using Authentication.Controllers
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.EditModels.ConfirmPhoneNumberViewModel

<form asp-controller="@(Helper.NameOfController<AccountController>())" asp-action="@(nameof(AccountController.ConfirmPhoneNumber))" method="post" class="form-horizontal">

  <div class="form-group">
    <label asp-for="PhoneNumber" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <label>
        @Model.PhoneNumber
      </label>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="SecurityCode" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="SecurityCode" class="form-control" placeholder="Security Code" />
      <span asp-validation-for="SecurityCode" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
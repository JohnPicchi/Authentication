@using Authentication.Controllers
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.ViewModels.LoginViewModel


<form asp-controller="@(Helper.NameOfController<AccountController>())" asp-action="@(nameof(AccountController.Login))" method="post" class="form-horizontal">

  <input asp-for="ReturnUrl"/>

  <div class="col-sm-offset-3 col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Login</h4>
      </div>
      <div class="panel-body col-sm-offset-1">
        <div class="form-group">
          <label asp-for="Email" class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group">
          <label asp-for="Password" class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                <input asp-for="RememberLogin" placeholder="RememberLogin"/>
                <small>Remember Me</small>
              </label>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Login</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

@using Authentication.Controllers
@using Authentication.PresentationModels.Account.ViewModels
@using Authentication.Utilities.Helpers
@model Authentication.PresentationModels.Account.EditModels.ResetPasswordEditModel

<div class="page-header">
  <h1>Password Reset</h1>
</div>

<form asp-controller=@(Helper.NameOfController<AccountController>()) asp-action=@(nameof(AccountController.ResetPassword)) method="post" class="form-horizontal">
  <input asp-for="Code">

  <div class="form-group">
    <label asp-for="Email" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="Password" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Password" class="form-control" placeholder="Password" />
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPassword" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="ConfirmPassword" class="form-control" placeholder="Password" />
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>

</form>
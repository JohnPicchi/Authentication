@using Microsoft.AspNetCore.Mvc.ModelBinding
@model Authentication.PresentationModels.ViewModels.RegisterViewModel

<div class="page-header">
  <h1>Registration</h1>
</div>

<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
  
  <div class="form-group">
    <label asp-for="FirstName" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="FirstName" class="form-control" placeholder="First Name" />
      <span asp-validation-for="FirstName" class ="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="LastName" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="LastName" class="form-control" placeholder="Last Name" />
      <span asp-validation-for="LastName" class ="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="Email" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email" />
      <span asp-validation-for="Email" class ="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="Password" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Password" class="form-control" placeholder="Password" />
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
  </div>
  
  <div class="form-group">
    <label asp-for="RegistrationCode" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="RegistrationCode" class="form-control" placeholder="Registration Code" />
      <span asp-validation-for="RegistrationCode" class="text-danger"></span>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Register</button>
    </div>
  </div>

</form>


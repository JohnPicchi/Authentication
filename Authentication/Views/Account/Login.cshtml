@model Authentication.PresentationModels.ViewModels.LoginViewModel

<div class="page-header">
  <h1>Login</h1>
</div>

<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
  
  <div class="form-group">
    <label asp-for="Email" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email"/>
      <span asp-validation-for="Email" class ="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="Password" class="control-label col-sm-2"></label>
    <div class="col-sm-10">
      <input asp-for="Password" class="form-control" placeholder="Password"/>
      <span asp-validation-for="Password" class ="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Login</button>
    </div>
  </div>

</form>
